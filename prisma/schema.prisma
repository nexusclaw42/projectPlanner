generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  status      String   @default("active") // active, paused, archived
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items       Item[]
  documents   Document[]

  @@map("projects")
}

model Item {
  id          String    @id @default(uuid())
  projectId   String?
  project     Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  
  title       String
  description String?
  type        String    @default("task") // task, document, note, idea, bookmark
  status      String    @default("todo") // todo, in_progress, done, backlog
  priority    String    @default("medium") // low, medium, high
  tags        String    @default("") // comma-separated
  dueDate     DateTime?
  
  // For subtasks
  parentId    String?
  parent      Item?     @relation("ItemSubtasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks    Item[]    @relation("ItemSubtasks")
  
  source      String    @default("manual") // manual, memory, conversation, file
  filePath    String?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("items")
}

model Document {
  id          String   @id @default(uuid())
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  
  name        String
  path        String
  type        String   // md, pdf, image, code, json
  content     String?  // extracted text for search
  tags        String   @default("") // comma-separated
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("documents")
}
